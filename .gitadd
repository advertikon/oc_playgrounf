#!/bin/bash

code=advertikon_stripe
short_code=stripe
type=payment

echo $code
echo $short_code
echo $type

for f in \
	system/library/advertikon/$short_code/ \
	admin/view/javascript/advertikon/$short_code \
	admin/view/stylesheet/advertikon/$short_code \
	admin/view/template/extension/$type/advertikon/$shoer_code* \
	admin/controller/extension/$type/$code.php \
	admin/model/extension/$type/$code.php \
	admin/language/en-gb/extension/$type/$code.php \
	catalog/controller/extension/$type/$code.php \
	catalog/language/en-gb/extension/$type/$code.php \
	catalog/model/extension/$type/$code.php \
	catalog/view/javascript/advertikon/$short_code/ \
	catalog/view/theme/default/stylesheet/advertikon/$shoert_code/ \
	catalog/view/theme/default/template/extension/payment/advertikon/$short_code/ \
	image/advertikon/$short_code/

do
	git add -f $f
done